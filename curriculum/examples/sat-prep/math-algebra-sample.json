      "children": [
        {
          "id": "sat-algebra-systems-substitution",
          "nodeType": "segment",
          "title": "Substitution Method",
          "description": "Solving systems by substituting one equation into another",
          "overview": "When one equation is solved for a variable, substitute that expression into the other equation.",
          "extensions": {
            "sat": {
              "testVersion": "digital-2024",
              "section": "math",
              "domain": "algebra",
              "skill": "systems_linear_equations",
              "difficultyRange": { "min": -0.5, "max": 1.0 },
              "timeTarget": 90,
              "strategyTags": ["substitution", "solve_for_one"],
              "commonErrors": ["substitution_sign_errors", "solving_wrong_variable"]
            }
          },
          "content": {
            "workedExamples": [
              {
                "problem": "Solve: y = 2x + 1 and 3x + y = 11",
                "steps": [
                  "Substitute y = 2x + 1 into second equation",
                  "3x + (2x + 1) = 11",
                  "5x + 1 = 11",
                  "5x = 10",
                  "x = 2",
                  "Back-substitute: y = 2(2) + 1 = 5"
                ],
                "solution": "(x, y) = (2, 5)",
                "verification": "Check both: 5 = 2(2) + 1 ✓; 3(2) + 5 = 11 ✓"
              }
            ]
          },
          "assessments": [
            {
              "id": "sat-algebra-sys-001",
              "type": "choice",
