  "strategies": [
    {
      "id": "strategy-backsolving",
      "title": "Back-Solving Strategy",
      "description": "When given answer choices, plug them back into the problem",
      "content": {
        "when": "Use when algebra seems complex but answers are clean numbers",
        "how": [
          "Start with choice B or C (middle value)",
          "Substitute into the original equation",
          "If too high, try lower; if too low, try higher",
          "Usually takes 2-3 tries maximum"
        ],
        "example": {
          "problem": "If 3x + 7 = 22, what is x?",
          "choices": ["A) 3", "B) 5", "C) 7", "D) 9"],
          "solution": "Try B: 3(5) + 7 = 22 ✓ Answer is B"
        }
      },
